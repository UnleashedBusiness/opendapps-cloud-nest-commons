{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}

